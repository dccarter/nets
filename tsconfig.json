{
  "compilerOptions": {
    "lib": [
      "ES6"
    ],
    "module": "ES6",
    "target": "es6",
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": [
      "bun-types" // add Bun global
    ],
    "esModuleInterop":true,
    "outDir": "bin"
  }
}